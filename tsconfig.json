{
  "type": "commonjs",
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "lib": ["es6", "es2017", "esnext"],
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src/",
    "strict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "jspm_packages/**/*"
  ]
}